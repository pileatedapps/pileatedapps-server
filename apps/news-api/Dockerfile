# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build news-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t news-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system news-api && \
          adduser --system -G news-api news-api

COPY dist/apps/news-api news-api/
RUN chown -R news-api:news-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix news-api --omit=dev -f install

CMD [ "node", "news-api" ]
